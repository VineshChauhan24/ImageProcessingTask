<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jumman.pralgomathic.imageprocessingtask">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="face" />

        <activity
            android:name="com.jumman.pralgomathic.imageprocessingtask.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jumman.pralgomathic.imageprocessingtask.activity.ImageCroppingActivity" />
        <activity android:name="com.jumman.pralgomathic.imageprocessingtask.activity.VideoMergeActivity" />
        <activity android:name="com.jumman.pralgomathic.imageprocessingtask.activity.AddAudioActivity" />
        <activity android:name="com.jumman.pralgomathic.imageprocessingtask.activity.AddTextActivity" />
        <activity
            android:name="com.jumman.pralgomathic.imageprocessingtask.activity.CropImageActivity"
            android:label="Crop Image" />
        <activity
            android:name="com.jumman.pralgomathic.imageprocessingtask.activity.ImagePickerActivity"
            android:label="Pick Image" />
        <activity android:name="com.jumman.pralgomathic.imageprocessingtask.activity.AddAnimationActivity"></activity>
    </application>

</manifest>